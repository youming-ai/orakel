{
  "name": "orakel",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "stop": "bash scripts/stop.sh",
    "dev": "concurrently \"bun run start\" \"cd web && bun run dev\"",
    "dev:bot": "bun run start",
    "dev:web": "cd web && bun run dev",
    "dev:mock": "bun run scripts/mock-server.ts",
    "setup": "bash scripts/setup.sh",
    "typecheck": "tsc --noEmit",
    "typecheck:check": "tsc --noEmit -p tsconfig.check.json",
    "typecheck:web": "cd web && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "lint:web": "biome check web/src",
    "lint:web:fix": "biome check --write web/src",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "db:reset": "bash scripts/db-reset.sh",
    "db:seed": "bun run scripts/db-seed.ts",
    "db:migrate": "bun run src/db.ts",
    "hooks:install": "bash scripts/install-git-hooks.sh",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "clean": "rm -rf node_modules web/node_modules dist data/*.db data/*.db-* data/*.csv",
    "precommit": "bun run lint:fix && bun run format && bun run typecheck && bun run test",
    "prepush": "bun run typecheck:check && bun run test"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@polymarket/clob-client": "^5.2.4",
    "ethers": "^5.8.0",
    "hono": "^4.12.3",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/bun": "latest",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
